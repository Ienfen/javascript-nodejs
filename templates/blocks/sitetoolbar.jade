  - siteToolbarSections.push({ slug: 'courses', url: '/courses', title: 'Курсы' });
  - siteToolbarSections.push({ url: 'http://javascript.ru/forum', title: 'Форум' });
  - siteToolbarSections.push({ url: 'http://es5.javascript.ru', title: 'ES5' });
