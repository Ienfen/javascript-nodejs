.main-en-contents
  display block
  max-width 930px
  width 100%
  min-width 600px
  margin 0 auto
  padding-top 57px

  ol&__titles
    counter-reset title
    list-style-type none
    margin 0
    padding 0

    & > li
      margin-top 0
      margin-bottom 35px

      &::before
        display none

  &__title
    position relative
    counter-reset section
    font-family 'SF UI Display'
    font-weight bold
    font-size 24px
    line-height 1.2
    color text_grey_dark
    border-bottom 1px solid rgba(0,0,0,.2)
    padding-bottom 15px
    margin-bottom 15px

  &__num
    position absolute
    top -2px
    left -46px
    font-family 'Whitney Index White'
    font-size 32px
    font-weight lighter

  ol&__sections
    counter-increment title
    list-style-type none
    columns 3
    margin 0
    padding 0

    & > li
      margin 0
      padding 0 0 3px 42px

  &__section
    position relative
    font-family 'SF UI Text'
    font-size 16px
    line-height 1.4

    &::before
      position absolute
      top 1px
      left 3px
      font-family 'Droid Sans Mono'
      font-size 12px
      color #20252B
      counter-increment section
      content counter(title) '.' counter(section)

