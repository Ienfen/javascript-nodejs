.about-en-banner
  position relative
  min-height 240px
  color #fff
  background url('header.jpg') no-repeat;
  background-size cover

  &__header
    margin-bottom 17px
    padding-top 17px
    width 100%
    text-align center

    +below('small-tablet')
      padding-top 35px

  &__title
    font-size 16px
    font-weight normal
    line-height initial

    +below('small-tablet')
      font-size 18px

  &__name
    font-size 31px
    font-weight bold
    line-height 42px

    +below('tablet')
      font-size 40px
      line-height 40px

  &__line
    width 110px
    height 2px
    margin 20px auto 0
    border none
    background rgba(255, 255, 255, 0.2)

    +below('phone')
      display none
