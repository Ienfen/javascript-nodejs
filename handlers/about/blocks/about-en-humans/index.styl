.about-en-humans

  &__human
    min-height 64px
    margin-top 10px
    padding-top 6px
    padding-left 78px

    &-title
      font-size inherit

    &-other
      font-size 14px

  &__link
    color light_link_color

    &:visited
      color link_color

  &__human-userpic
    position absolute
    overflow hidden
    width 64px
    height 64px
    margin -8px 0 0 -78px
    border-radius 50%
    box-sizing border-box
    border 1px solid ultralight_gray_color

  &__human-role
    margin 3px 0 0 0
    font-size 14px
    color light_gray_color
