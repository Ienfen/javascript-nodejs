.about-humans
  &__human
    min-height 66px
    margin-top 20px
    padding-left 78px

  &__link
    &:visited
      color link_color

  &__human-userpic
    position absolute
    overflow hidden
    width 65px
    height 65px
    margin -10px 0 0 -78px
