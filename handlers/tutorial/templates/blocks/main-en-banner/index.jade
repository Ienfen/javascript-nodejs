mixin main-en-banner(data)
  - data = data || {};

  +b.main-en-banner
    +e('a')(href='/').logo
      +e('img')(src="/img/logo-en-white.svg" width=194)
    +e.inner
      +e.texts
        +e('h1').title
          =data.title

        for text in data.text
          +e('p').text(class=(text[1] ? 'no-mobile' : ''))
            != text[0]
      +e('a')(href="https://github.com/iliakan/javascript-tutorial/tree/en").github view on Github
      +e.content
        block
