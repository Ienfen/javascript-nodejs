mixin main-en-contents(data)

    +b.main-en-contents(class=data.main ? '_main' : '')
        +b.list
            each topic, index in data.contents
                - section_index = (index < 9) ? '0' + (index + 1) : index + 1
                +e.item
                    +e.title
                        +e.index
                            =section_index
                        +e('a').link(href=topic.url)
                            =topic.title
                    +b('ul').list-sub
                        each subtopic, index in topic.children
                            +e('li').item(class= (index > 5) ? '_phone_hidden' : '')
                                +e.title
                                    +e('a').link(href=subtopic.url)= subtopic.title
                        if (topic.children.length > 6)
                            +e.more
