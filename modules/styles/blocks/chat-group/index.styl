.chat-group
  text-align center
  overflow hidden

  &__header
    display inline-block
    position relative
    font-weight bold
    margin-bottom 23px

    &::after
    &::before
      content ''
      border-top 1px solid #DFDDDC
      width 1000px
      position absolute
      top 50%

    &::after
      left 100%
      margin-left 30px

    &::before
      right 100%
      margin-right 30px
