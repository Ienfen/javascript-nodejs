.chat-logs
    &__title
        font-size: 20

.chat-messages
    display: flex
    justify-content: center

    &__messages
        text-align: left

    &__messages, &__message
        list-style: none

    &__message
        display: flex
        margin-bottom: 80px
        padding: 10px 0
        border-bottom: 1px solid grey

    &__userpic
        width: 80px
        height: 80px
        background: grey

    &__content
        margin-left: 40px

    &__time
        margin-left: 20px
        font-size: 14px
        color: gray

    &__text
        margin-top: 10px
