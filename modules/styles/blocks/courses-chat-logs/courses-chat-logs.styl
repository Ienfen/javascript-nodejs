.chat-logs
    &__title
        font-size: 20

.chat-messages
    width: 80%
    margin: 0 auto

    &__messages
        text-align: left
        width: 100%

    &__messages, &__message
        list-style: none

    &__message
        display: flex
        margin-bottom: 80px
        padding: 10px 0
        border-bottom: 1px solid grey

    &__userpic
        width: 80px
        height: 80px
        background: grey

    &__content
        margin-left: 40px

    &__time
        margin-left: 20px
        font-size: 14px
        color: gray

    &__text
        margin-top: 10px

        code
            display: block
            margin-bottom: 5px

.chat-logs-change-date
    &__input, &__button
        padding: 10px 5px
        font-size: 16px

    &__input
        outline: none

    &__button
        padding: 13px 5px
