.chat-log
  padding-top 60px

  &__header
    height 60px
    margin-top -60px
    display flex
    align-items center
    justify-content space-between
    background #EEEEEE
    padding 0 30px
    font-size 0.875em
    position absolute
    left 0
    right 0

    &_fixed
      position fixed
      top 0
      margin-top 0
      z-index 2

  & &__title
    margin 0

  &__field
    width 156px
    display inline-block
    margin 0 10px
    height 34px

  &__content
    padding 30px 22px
