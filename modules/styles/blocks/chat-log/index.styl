.chat-log
  &__header
    height 60px
    display flex
    align-items: center
    background #EEEEEE
    padding 0 22px
    font-size 0.875em
    border-bottom 2px #E3E3E3 solid

  &__field
    width 156px
    display inline-block
    margin 0 10px
    height 34px

  &__content
    background #F5F2F0
    border-bottom 2px solid rgba(#666666, 0.2)
    height 660px
    overflow-y auto
    padding 30px 22px
